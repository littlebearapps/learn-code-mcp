{
  "name": "@learn-code/mcp",
  "version": "0.1.0",
  "description": "Fast, deterministic code explanations through MCP with VS Code extension and CLI. Features 4 explanation length presets, secret redaction, and workspace context integration.",
  "type": "module",
  "main": "dist/server.js",
  "files": [
    "dist/",
    "vscode-extension/",
    "docs/",
    "README.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "teach": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "dev:cli": "tsx src/cli.ts",
    "dev:server": "tsx src/server.ts",
    "test": "vitest",
    "test:cli": "./test-cli-comprehensive.sh",
    "test:cross-platform": "node test-cross-platform.js",
    "test:all": "npm run test:cli && npm run test:cross-platform",
    "benchmark": "node benchmark.js",
    "validate": "npm run test:all && npm run lint",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build && npm run validate"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-explanation",
    "vscode",
    "cli",
    "development"
  ],
  "author": "Little Bear Apps",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/little-bear-apps/learn-code-mcp.git"
  }
}