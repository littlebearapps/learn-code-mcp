{
  "name": "@learn-code/mcp",
  "version": "0.1.0",
  "description": "Fast, deterministic code explanations through MCP with four length presets",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "teach": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "dev:cli": "tsx src/cli.ts",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-explanation",
    "vscode",
    "cli",
    "development"
  ],
  "author": "Little Bear Apps",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/little-bear-apps/learn-code-mcp.git"
  }
}